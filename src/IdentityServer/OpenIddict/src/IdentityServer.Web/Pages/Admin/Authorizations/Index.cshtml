@page
@model IdentityServer.Web.Pages.Admin.Authorizations.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Authorizations";
}

<div x-data="authorizationsManagement()" x-init="init()">
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Authorizations</h1>
            <p class="mt-1 text-sm text-gray-500">View and manage active authorization codes and tokens</p>
        </div>
        <button
            @@click="loadAuthorizations()"
            class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Refresh
        </button>
    </div>

    <!-- Filters -->
    <div class="mb-6 bg-white rounded-lg shadow-sm p-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Search by Subject/Client</label>
                <input
                    type="text"
                    x-model="search"
                    @@input="loadAuthorizations()"
                    placeholder="Search..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select
                    x-model="statusFilter"
                    @@change="loadAuthorizations()"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <option value="">All</option>
                    <option value="valid">Valid</option>
                    <option value="revoked">Revoked</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                <select
                    x-model="typeFilter"
                    @@change="loadAuthorizations()"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <option value="">All Types</option>
                    <option value="permanent">Permanent</option>
                    <option value="adhoc">Ad-hoc</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Authorizations Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Scopes</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-for="auth in authorizations" :key="auth.id">
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900" x-text="auth.subject"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900" x-text="auth.applicationName || auth.applicationId"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span
                                    class="px-2 py-1 text-xs font-medium rounded-full"
                                    :class="auth.type === 'permanent' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800'"
                                    x-text="auth.type"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-wrap gap-1">
                                    <template x-for="scope in auth.scopes.slice(0, 3)" :key="scope">
                                        <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded" x-text="scope"></span>
                                    </template>
                                    <span x-show="auth.scopes.length > 3" class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded" x-text="`+${auth.scopes.length - 3}`"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" x-text="formatDate(auth.creationDate)"></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span
                                    class="px-2 py-1 text-xs font-medium rounded-full"
                                    :class="auth.status === 'valid' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                                    x-text="auth.status"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <button
                                    @@click="viewDetails(auth)"
                                    class="text-indigo-600 hover:text-indigo-900 mr-3">
                                    View
                                </button>
                                <button
                                    x-show="auth.status === 'valid'"
                                    @@click="revokeAuthorization(auth.id)"
                                    class="text-red-600 hover:text-red-900">
                                    Revoke
                                </button>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        <div x-show="authorizations.length === 0" class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No authorizations found</h3>
            <p class="mt-1 text-sm text-gray-500">No active authorizations match your filters.</p>
        </div>

        <!-- Pagination -->
        <div x-show="totalCount > pageSize" class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                Showing <span x-text="(currentPage - 1) * pageSize + 1"></span> to
                <span x-text="Math.min(currentPage * pageSize, totalCount)"></span> of
                <span x-text="totalCount"></span> results
            </div>
            <div class="flex gap-2">
                <button
                    @@click="currentPage--; loadAuthorizations()"
                    :disabled="currentPage === 1"
                    class="px-3 py-1 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                    Previous
                </button>
                <button
                    @@click="currentPage++; loadAuthorizations()"
                    :disabled="currentPage * pageSize >= totalCount"
                    class="px-3 py-1 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                    Next
                </button>
            </div>
        </div>
    </div>

    <!-- Details Modal -->
    <div
        x-show="showDetailsModal"
        class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50"
        style="display: none;">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-2xl shadow-lg rounded-lg bg-white">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Authorization Details</h3>
                <button @@click="showDetailsModal = false" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div x-show="selectedAuth" class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-500">ID</label>
                        <p class="mt-1 text-sm text-gray-900 font-mono" x-text="selectedAuth?.id"></p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500">Subject</label>
                        <p class="mt-1 text-sm text-gray-900" x-text="selectedAuth?.subject"></p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500">Client</label>
                        <p class="mt-1 text-sm text-gray-900" x-text="selectedAuth?.applicationName || selectedAuth?.applicationId"></p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500">Type</label>
                        <p class="mt-1 text-sm text-gray-900" x-text="selectedAuth?.type"></p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500">Status</label>
                        <p class="mt-1">
                            <span
                                class="px-2 py-1 text-xs font-medium rounded-full"
                                :class="selectedAuth?.status === 'valid' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                                x-text="selectedAuth?.status"></span>
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500">Created</label>
                        <p class="mt-1 text-sm text-gray-900" x-text="formatDate(selectedAuth?.creationDate)"></p>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-2">Scopes</label>
                    <div class="flex flex-wrap gap-2">
                        <template x-for="scope in selectedAuth?.scopes" :key="scope">
                            <span class="px-3 py-1 text-sm bg-indigo-100 text-indigo-800 rounded-full" x-text="scope"></span>
                        </template>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function authorizationsManagement() {
        return {
            authorizations: [],
            search: '',
            statusFilter: '',
            typeFilter: '',
            currentPage: 1,
            pageSize: 10,
            totalCount: 0,
            showDetailsModal: false,
            selectedAuth: null,

            init() {
                this.loadAuthorizations();
            },

            async loadAuthorizations() {
                try {
                    const params = new URLSearchParams({
                        search: this.search,
                        status: this.statusFilter,
                        type: this.typeFilter,
                        page: this.currentPage,
                        pageSize: this.pageSize
                    });

                    const response = await fetch(`https://localhost:5001/api/admin/authorizations?${params}`, {
                        credentials: 'include',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const data = await response.json();
                    this.authorizations = data.items || [];
                    this.totalCount = data.totalCount || 0;
                } catch (error) {
                    console.error('Failed to load authorizations:', error);
                    showToast('Failed to load authorizations', 'error');
                    this.authorizations = [];
                    this.totalCount = 0;
                }
            },

            viewDetails(auth) {
                this.selectedAuth = auth;
                this.showDetailsModal = true;
            },

            async revokeAuthorization(authId) {
                if (!confirm('Are you sure you want to revoke this authorization? This will invalidate all associated tokens.')) {
                    return;
                }

                try {
                    const response = await fetch(`https://localhost:5001/api/admin/authorizations/${authId}/revoke`, {
                        method: 'POST',
                        credentials: 'include',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        const error = await response.json();
                        throw new Error(error.error || 'Failed to revoke authorization');
                    }

                    showToast('Authorization revoked successfully', 'success');
                    this.loadAuthorizations();
                } catch (error) {
                    console.error('Failed to revoke authorization:', error);
                    showToast(error.message || 'Failed to revoke authorization', 'error');
                }
            },

            formatDate(date) {
                if (!date) return '';
                return new Date(date).toLocaleString();
            }
        };
    }
</script>
