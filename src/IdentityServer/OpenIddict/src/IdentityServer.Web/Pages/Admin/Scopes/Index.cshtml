@page
@model IdentityServer.Web.Pages.Admin.Scopes.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Scopes Management";
}

<div x-data="scopesManagement()" x-init="init()">
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Scopes Management</h1>
            <p class="mt-1 text-sm text-gray-500">Manage OAuth2/OIDC scopes and permissions</p>
        </div>
        <button @@click="openCreateModal()"
            class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Scope
        </button>
    </div>

    <!-- Search and Filter -->
    <div class="mb-6 bg-white rounded-lg shadow-sm p-4">
        <div class="flex gap-4">
            <div class="flex-1">
                <input type="text" x-model="search" @@input="loadScopes()" placeholder="Search scopes..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
            </div>
            <button @@click="loadScopes()"
                class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors">
                Search
            </button>
        </div>
    </div>

    <!-- Scopes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <template x-for="scope in scopes" :key="scope.id">
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
                <div class="flex items-start justify-between mb-4">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900" x-text="scope.name"></h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium mt-2"
                            :class="scope.isEnabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'">
                            <span x-text="scope.isEnabled ? 'Enabled' : 'Disabled'"></span>
                        </span>
                    </div>
                    <div class="relative" x-data="{ open: false }">
                        <button @@click="open = !open" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
                            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                            </svg>
                        </button>
                        <div x-show="open" @@click.away="open = false"
                            class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg z-10 py-1">
                            <button @@click="openEditModal(scope); open = false"
                                class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                Edit
                            </button>
                            <button @@click="deleteScope(scope.id); open = false"
                                class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>

                <p class="text-sm text-gray-600 mb-4" x-text="scope.description || 'No description'"></p>

                <div class="space-y-2 border-t pt-4">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Display Name:</span>
                        <span class="font-medium text-gray-900" x-text="scope.displayName || scope.name"></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Resources:</span>
                        <span class="font-medium text-gray-900" x-text="scope.resources?.length || 0"></span>
                    </div>
                </div>
            </div>
        </template>
    </div>

    <!-- Empty State -->
    <div x-show="scopes.length === 0" class="text-center py-12 bg-white rounded-lg shadow-sm">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No scopes found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new scope.</p>
    </div>

    <!-- Create/Edit Modal -->
    <div x-show="showModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50"
        style="display: none;">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-2xl shadow-lg rounded-lg bg-white">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900"
                    x-text="editingScope.id ? 'Edit Scope' : 'Create Scope'"></h3>
                <button @@click="closeModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <form @@submit.prevent="saveScope()">
                <div class="space-y-4">
                    <!-- Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Scope Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" x-model="editingScope.name" :disabled="editingScope.id" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent disabled:bg-gray-100"
                            placeholder="e.g., api.read">
                    </div>

                    <!-- Display Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Display Name
                        </label>
                        <input type="text" x-model="editingScope.displayName"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                            placeholder="e.g., API Read Access">
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Description
                        </label>
                        <textarea x-model="editingScope.description" rows="3"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                            placeholder="Describe what this scope allows..."></textarea>
                    </div>

                    <!-- Resources -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Resources (API Identifiers)
                        </label>
                        <div class="space-y-2">
                            <template x-for="(resource, index) in editingScope.resources" :key="index">
                                <div class="flex gap-2">
                                    <input type="text" x-model="editingScope.resources[index]"
                                        class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                                        placeholder="e.g., https://api.example.com">
                                    <button type="button" @@click="editingScope.resources.splice(index, 1)"
                                        class="px-3 py-2 bg-red-100 hover:bg-red-200 text-red-600 rounded-lg transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>
                            </template>
                            <button type="button" @@click="editingScope.resources.push('')"
                                class="w-full px-4 py-2 border-2 border-dashed border-gray-300 hover:border-indigo-400 text-gray-600 hover:text-indigo-600 rounded-lg transition-colors">
                                + Add Resource
                            </button>
                        </div>
                    </div>

                    <!-- Enabled -->
                    <div class="flex items-center">
                        <input type="checkbox" x-model="editingScope.isEnabled" id="scope-enabled"
                            class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                        <label for="scope-enabled" class="ml-2 text-sm text-gray-700">
                            Enabled
                        </label>
                    </div>
                </div>

                <div class="mt-6 flex justify-end gap-3">
                    <button type="button" @@click="closeModal()"
                        class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                        class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
                        <span x-text="editingScope.id ? 'Update' : 'Create'"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function scopesManagement() {
        return {
            scopes: [],
            search: '',
            showModal: false,
            editingScope: {},

            init() {
                this.loadScopes();
            },

            async loadScopes() {
                try {
                    const params = new URLSearchParams({ search: this.search });
                    const response = await fetch(`https://localhost:5001/api/admin/scopes?${params}`, {
                        credentials: 'include',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    this.scopes = await response.json();
                } catch (error) {
                    console.error('Failed to load scopes:', error);
                    showToast('Failed to load scopes', 'error');
                    this.scopes = [];
                }
            },

            openCreateModal() {
                this.editingScope = {
                    name: '',
                    displayName: '',
                    description: '',
                    resources: [],
                    isEnabled: true
                };
                this.showModal = true;
            },

            openEditModal(scope) {
                this.editingScope = { ...scope };
                this.showModal = true;
            },

            closeModal() {
                this.showModal = false;
                this.editingScope = {};
            },

            async saveScope() {
                try {
                    const method = this.editingScope.id ? 'PUT' : 'POST';
                    const url = this.editingScope.id
                        ? `https://localhost:5001/api/admin/scopes/${this.editingScope.id}`
                        : 'https://localhost:5001/api/admin/scopes';

                    const response = await fetch(url, {
                        method,
                        credentials: 'include',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(this.editingScope)
                    });

                    if (!response.ok) {
                        const error = await response.json();
                        throw new Error(error.error || 'Failed to save scope');
                    }

                    showToast(`Scope ${this.editingScope.id ? 'updated' : 'created'} successfully`, 'success');
                    this.closeModal();
                    this.loadScopes();
                } catch (error) {
                    console.error('Failed to save scope:', error);
                    showToast(error.message || 'Failed to save scope', 'error');
                }
            },

            async deleteScope(scopeId) {
                if (!confirm('Are you sure you want to delete this scope?')) {
                    return;
                }

                try {
                    const response = await fetch(`https://localhost:5001/api/admin/scopes/${scopeId}`, {
                        method: 'DELETE',
                        credentials: 'include',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        const error = await response.json();
                        throw new Error(error.error || 'Failed to delete scope');
                    }

                    showToast('Scope deleted successfully', 'success');
                    this.loadScopes();
                } catch (error) {
                    console.error('Failed to delete scope:', error);
                    showToast(error.message || 'Failed to delete scope', 'error');
                }
            }
        };
    }
</script>