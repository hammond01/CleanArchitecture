@page
@model IdentityServer.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex">
    <!-- Left Side - Hero Section -->
    <div
        class="hidden lg:flex lg:flex-1 bg-gradient-to-br from-primary-600 to-primary-800 items-center justify-center p-12">
        <div class="max-w-md text-white">
            <h1 class="text-4xl font-bold mb-6">
                Join Us Today
            </h1>
            <p class="text-lg text-primary-100 mb-8">
                Create your account and start experiencing secure, modern authentication.
            </p>
            <div class="space-y-4">
                <div class="flex items-start">
                    <svg class="h-6 w-6 text-primary-200 mr-3 mt-1" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <div>
                        <h3 class="font-semibold">Free Forever</h3>
                        <p class="text-sm text-primary-100">No credit card required</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <svg class="h-6 w-6 text-primary-200 mr-3 mt-1" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <div>
                        <h3 class="font-semibold">Bank-Level Security</h3>
                        <p class="text-sm text-primary-100">Your data is encrypted and protected</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <svg class="h-6 w-6 text-primary-200 mr-3 mt-1" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    <div>
                        <h3 class="font-semibold">Get Started Instantly</h3>
                        <p class="text-sm text-primary-100">Setup takes less than 2 minutes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Side - Form -->
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 bg-white">
        <div class="max-w-md w-full space-y-8">
            <!-- Logo & Header -->
            <div>
                <h2 class="text-center text-3xl font-extrabold text-gray-900">
                    Create your account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Already have an account?
                    <a href="/account/login" class="font-medium text-primary-600 hover:text-primary-500">
                        Sign in
                    </a>
                </p>
            </div>

            <!-- Register Form -->
            <form class="mt-8 space-y-6" method="post" x-data="registerForm()">
                <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

                <div class="space-y-4">
                    <!-- Full Name -->
                    <div>
                        <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700">
                            Full Name
                        </label>
                        <div class="mt-1">
                            <input asp-for="Input.FullName" type="text" autocomplete="name"
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                                placeholder="John Doe">
                        </div>
                        <span asp-validation-for="Input.FullName" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">
                            Email Address
                        </label>
                        <div class="mt-1">
                            <input asp-for="Input.Email" type="email" autocomplete="email"
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                                placeholder="you@example.com">
                        </div>
                        <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Username -->
                    <div>
                        <label asp-for="Input.UserName" class="block text-sm font-medium text-gray-700">
                            Username
                        </label>
                        <div class="mt-1">
                            <input asp-for="Input.UserName" type="text" autocomplete="username"
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                                placeholder="johndoe">
                        </div>
                        <span asp-validation-for="Input.UserName" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">
                            Password
                        </label>
                        <div class="mt-1 relative">
                            <input asp-for="Input.Password" x-bind:type="showPassword ? 'text' : 'password'"
                                x-model="password" x-on:input="checkPasswordStrength()" autocomplete="new-password"
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                                placeholder="••••••••">
                            <button type="button" x-on:click="showPassword = !showPassword"
                                class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <svg x-show="!showPassword" class="h-5 w-5 text-gray-400" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                <svg x-show="showPassword" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" x-cloak>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>

                        <!-- Password Strength Indicator -->
                        <div class="mt-2" x-show="password.length > 0">
                            <div class="flex items-center space-x-2">
                                <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                                    <div x-bind:class="{
                                        'bg-red-500': strength === 'weak',
                                        'bg-yellow-500': strength === 'medium',
                                        'bg-green-500': strength === 'strong'
                                    }" x-bind:style="`width: ${strengthPercent}%`"
                                        class="h-full transition-all duration-300"></div>
                                </div>
                                <span x-text="strength" x-bind:class="{
                                          'text-red-600': strength === 'weak',
                                          'text-yellow-600': strength === 'medium',
                                          'text-green-600': strength === 'strong'
                                      }" class="text-xs font-medium capitalize"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">
                            Confirm Password
                        </label>
                        <div class="mt-1">
                            <input asp-for="Input.ConfirmPassword" x-bind:type="showPassword ? 'text' : 'password'"
                                autocomplete="new-password"
                                class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                                placeholder="••••••••">
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Terms & Conditions -->
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input asp-for="Input.AgreeToTerms" type="checkbox"
                            class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                        <label asp-for="Input.AgreeToTerms" class="text-gray-700">
                            I agree to the
                            <a href="/terms" class="font-medium text-primary-600 hover:text-primary-500"
                                target="_blank">
                                Terms of Service
                            </a>
                            and
                            <a href="/privacy" class="font-medium text-primary-600 hover:text-primary-500"
                                target="_blank">
                                Privacy Policy
                            </a>
                        </label>
                        <br />
                        <span asp-validation-for="Input.AgreeToTerms" class="text-red-600"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2.5 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-150">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-primary-500 group-hover:text-primary-400"
                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path
                                    d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
                            </svg>
                        </span>
                        Create Account
                    </button>
                </div>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Or register with</span>
                    </div>
                </div>

                <!-- Social Register Buttons -->
                <div class="grid grid-cols-2 gap-3">
                    <button type="button"
                        class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-all duration-150">
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M12.545 10.239v3.821h5.445c-.712 2.315-2.647 3.972-5.445 3.972a6.033 6.033 0 110-12.064c1.498 0 2.866.549 3.921 1.453l2.814-2.814A9.969 9.969 0 0012.545 2C7.021 2 2.543 6.477 2.543 12s4.478 10 10.002 10c8.396 0 10.249-7.85 9.426-11.748l-9.426-.013z" />
                        </svg>
                        <span class="ml-2">Google</span>
                    </button>

                    <button type="button"
                        class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-all duration-150">
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.163 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
                        </svg>
                        <span class="ml-2">GitHub</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function registerForm() {
            return {
                password: '',
                showPassword: false,
                strength: '',
                strengthPercent: 0,

                checkPasswordStrength() {
                    const pwd = this.password;
                    let score = 0;

                    if (pwd.length >= 8) score++;
                    if (pwd.length >= 12) score++;
                    if (/[a-z]/.test(pwd) && /[A-Z]/.test(pwd)) score++;
                    if (/\d/.test(pwd)) score++;
                    if (/[^a-zA-Z0-9]/.test(pwd)) score++;

                    if (score <= 2) {
                        this.strength = 'weak';
                        this.strengthPercent = 33;
                    } else if (score <= 4) {
                        this.strength = 'medium';
                        this.strengthPercent = 66;
                    } else {
                        this.strength = 'strong';
                        this.strengthPercent = 100;
                    }
                }
            };
        }
    </script>

    <style>
        [x-cloak] {
            display: none !important;
        }
    </style>
}